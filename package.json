{
  "name": "online-adventur.es",
  "description": " Code for the website http://www.online-adventur.es",
  "author": "Offirmo <offirmo.net@gmail.com>",
  "version": "0.0.1",
  "private": true,
  "license": "Unlicense",
  "main": "server.js",
  "scripts": {
    "bower": "bower update --config.interactive=false",
    "postinstall": "npm run bower && cd common/incubator/carnet && npm install && cd ../easyconf && npm install",
    "lint": "eslint .",
    "nodemon": "nodemon",
    "env": "environmentalist",
    "build-appcache": "r.js -o client/apps/appcache/requirejs-build-config.js paths.requireLib=bower_components/requirejs/require include=requireLib",
    "build-helloworld": "r.js -o client/apps/helloworld/requirejs-build-config.js paths.requireLib=bower_components/requirejs/require include=requireLib",
    "build-famous-base": "r.js -o client/apps/famous-base/requirejs-build-config.js paths.requireLib=bower_components/requirejs/require include=requireLib",
    "build-jeudunombre": "r.js -o client/apps/jeudunombre/requirejs-build-config.js paths.requireLib=bower_components/requirejs/require include=requireLib",
    "build": "npm run build-appcache && npm run build-helloworld && npm run build-famous-base && npm run build-jeudunombre",

    "cleardeps": "rm -rf node_modules && rm -rf bower_components && rm -rf common/incubator/carnet/node_modules && rm -rf common/incubator/easyconf/node_modules",
    "install_globals": "npm install --global nodemon puer bower && npm update -g nodemon puer bower",
    "devinstall": "npm run install_globals && npm prune && npm install && npm update && npm run devbower && cd common/incubator/carnet && npm prune && npm install && npm update && cd ../easyconf && npm prune && npm install && npm update",
    "devbower": "bower prune && bower install && bower update",

    "bb": "npm run devbower",
    "cc": "npm run cleardeps",
    "ii": "npm run devinstall"
  },
  "engines": {
    "node": "^0.12"
  },
  "dependencies": {
    "amdefine": "~0.1.1",
    "async": "~1.2",
    "bower": "^1",
    "chalk": "~1.0",
    "clarify": "~1",
    "compression": "~1.5",
    "consolidate": "~0.13",
    "domain-middleware": "~0.1",
    "dust-intl": "~1.1",
    "dustjs-helpers": "~1.7",
    "dustjs-linkedin": "~2.7",
    "environmentalist": "~1.0",
    "express": "^4",
    "express-slash": "~2.0",
    "forky": "~0.3",
    "jsdom": "^3",
    "json-htmlize": "~0.1",
    "intl": "latest",
    "locale": "~0.0",
    "lodash": "^3",
    "morgan": "~1.6",
    "node-mandrill": "~1.0",
    "prettyjson": "~1.1",
    "response-time": "~2.3",
    "serve-favicon": "~2.3",
    "serve-index": "~1.7",
    "serve-static": "~1.10",
    "trace": "~0.2",
    "when": "~3.7"
  },
  "devDependencies": {
    "eslint": "^0",
    "eslint-plugin-angular": "^0",
    "express-debug": "^1",
    "express-livereload": "^0",
    "nodemon": "^1",
    "pre-commit": "^1",
    "requirejs": "latest"
  },
  "xpre-commit": [
    "lint"
  ]
}
